<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_backgroud">

    <ListView
        android:id="@+id/paper_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/confirm"
        android:background="@color/white"
        android:divider="#aaa"
        android:dividerHeight="1px"/>


    <Button
        android:id="@+id/add_paper"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="90dp"
        android:background="@mipmap/work_btn_add_float"/>


    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="@dimen/sp_12"
        android:background="@drawable/job_button_shape"
        android:gravity="center"
        android:text="确定"
        android:textColor="#FFFFFF"
        android:textSize="18sp"/>

</RelativeLayout>