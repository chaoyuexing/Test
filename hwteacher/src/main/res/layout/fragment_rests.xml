<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/job_name_et"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/add_job_edit_bg"
            android:drawableLeft="@mipmap/work_ic_toolbar_search"
            android:drawablePadding="8dp"
            android:hint="请输入习题所在位置"
            android:paddingLeft="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="8dp"
            android:text="历史记录"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/paper_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="#aaa"
            android:dividerHeight="1px"/>
    </LinearLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/job_button_shape"
        android:gravity="center"
        android:text="确定"
        android:textColor="#FFFFFF"
        android:textSize="18sp"/>

</RelativeLayout>