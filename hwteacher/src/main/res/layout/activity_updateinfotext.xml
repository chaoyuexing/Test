<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/include_head" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/oldInfoIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="当前设置："
            android:textColor="@color/black"
            android:textSize="14sp" />

        <com.homework.teacher.widget.XEditText
            android:id="@+id/oldInfoEt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/oldInfoIv"
            android:background="@null"
            android:drawablePadding="5dp"
            android:gravity="right|center_vertical"
            android:hint="请输入原密码"
            android:longClickable="false"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/white_gray"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/newInfoIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="重新设置："
            android:textColor="@color/black"
            android:textSize="14sp" />

        <com.homework.teacher.widget.XEditText
            android:id="@+id/newInfoEt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/newInfoEt"
            android:background="@null"
            android:drawablePadding="5dp"
            android:gravity="right|center_vertical"
            android:hint="请设置"
            android:longClickable="false"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/white_gray"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white_gray" />

    <Button
        android:id="@+id/confirmUpdateBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@color/theme_color"
        android:gravity="center"
        android:text="@string/confirm_update"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>