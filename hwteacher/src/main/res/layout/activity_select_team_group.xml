<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/custom_selected"
              android:layout_height="match_parent">

    <include layout="@layout/include_head"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#F5F7F8"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:text="发布到备课组"
        android:textColor="#9896a0"
        android:textSize="16sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/prepare_lessons_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#F5F7F8"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:text="发布到我的班级"
        android:textColor="#9896a0"
        android:textSize="16sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_class_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="#F5F7F8"
        android:layout_height="80dp">
        <Button
            android:id="@+id/select_team_group"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/job_button_shape"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="选择班组"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>