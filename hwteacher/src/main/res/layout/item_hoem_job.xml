<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:background="@color/white"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical">

    <View
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="18dp"
        android:background="@color/info_key"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp">
        <ImageView
            android:id="@+id/home_item_icon"
            android:src="@mipmap/common_ic_math"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/home_item_title"
            android:layout_toRightOf="@id/home_item_icon"
            tools:text="课课练习"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/home_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/home_item_icon"
            android:layout_below="@id/home_item_title"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@mipmap/home_ic_maker"
            android:drawablePadding="4dp"
            android:textSize="16sp"
            tools:text="李毅"/>

        <TextView
            android:id="@+id/home_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_item_title"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            tools:text="2018-3-31 17:00"/>

        <TextView
            android:id="@+id/home_item_draft"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_below="@id/home_item_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp"
            android:layout_marginTop="5dp"
            android:text="草稿"
            android:textSize="13sp"
            android:textColor="#FCAB3F"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/home_job_item_draft_backgroud"/>
    </RelativeLayout>


</LinearLayout>